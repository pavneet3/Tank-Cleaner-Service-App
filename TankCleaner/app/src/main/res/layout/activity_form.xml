<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.pavneet.tankcleaner.Form">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/button"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Services"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:textSize="30dp"
                android:layout_marginTop="20dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/etname"
                android:drawableLeft="@drawable/usr"

                android:hint="enter your name"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:hint="enter your contact no."
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phn"
                android:inputType="phone"
                android:textColor="#000000"

                android:ems="10"
                android:id="@+id/etphone"
                android:layout_below="@+id/etname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:hint="enter your email"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/msg"
                android:inputType="textEmailAddress"

                android:textColor="#000000"

                android:ems="10"
                android:id="@+id/etemail"
                android:layout_below="@+id/etphone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:hint="address"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mrk"

                android:id="@+id/etaddress"
                android:layout_below="@+id/etemail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onreg"
        android:text="Make Request"
        android:id="@+id/button"
        android:background="@drawable/round"
        android:textColor="@color/text"
        android:textColorLink="#000000"

        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />


</RelativeLayout>
